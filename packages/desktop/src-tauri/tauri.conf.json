{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stud",
  "identifier": "app.stud.desktop",
  "mainBinaryName": "Stud",
  "version": "../package.json",
  "build": {
    "beforeDevCommand": "PATH=$HOME/.bun/bin:$PATH bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "PATH=$HOME/.bun/bin:$PATH bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "create": false,
        "title": "Stud",
        "url": "/",
        "decorations": true,
        "dragDropEnabled": false,
        "zoomHotkeysEnabled": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 12.0, "y": 18.0 }
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "active": true,
    "targets": ["deb", "rpm", "dmg", "nsis", "app"],
    "externalBin": ["sidecars/stud-core"],
    "macOS": {
      "entitlements": "./entitlements.plist"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": "assets/nsis-header.bmp",
        "sidebarImage": "assets/nsis-sidebar.bmp"
      }
    }
  }
}
